DECLARE @DESDE DATE = CONVERT(DATE,DATEADD(dd,-(DAY(GETDATE())-1),GETDATE()))
,@HASTA DATE =  CONVERT(DATE,DATEADD(dd,-(DAY(DATEADD(mm,1,GETDATE()))),DATEADD(mm,1,GETDATE())))

SELECT @DESDE AS P_DIA_MES, @HASTA AS U_DIA_MES
IF OBJECT_ID('tempdb.dbo.#TMP_CALENDARIO') IS NOT NULL BEGIN DROP TABLE #TMP_CALENDARIO END
CREATE TABLE #TMP_CALENDARIO(
	FECHA  DATE
	,DIA  VARCHAR(20)
)

SET LANGUAGE SPANISH
WHILE @DESDE <= @HASTA  BEGIN
	INSERT INTO #TMP_CALENDARIO (FECHA,DIA)
	SELECT @DESDE,DATENAME(DW,@DESDE)
	SET @DESDE = DATEADD(DAY,1,@DESDE)
END 

SELECT * FROM #TMP_CALENDARIO
